          div.portfolio__container.portfolio__container--animation
            //- +thirdPartPortfolioItem("", "", "", "")
          

    div.sidebar
      a(href="#").icon
        img(src="img/menu.png")
      
      div.navbar
        ul.navbar__list
          - var menus = ["D", "M", "V", "L", "Chat"];

          for menu in menus
            li.navbar__item
              a(href="#").navbar__link= menu
  
  script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js")
